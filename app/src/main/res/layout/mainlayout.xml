<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/mainbackgrond"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/mainbackgrond" />
    <RelativeLayout
        android:id="@+id/maintop"
        android:layout_width="match_parent"
        android:layout_height="155dp"
        android:backgroundTint="@android:color/holo_green_light"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/pku_schoolbadge"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="65dp"
            android:layout_marginTop="65dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/pku_schoolbadge" />
        <ImageView
            android:id="@+id/log_out"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/log_out"
            android:layout_marginTop="40dp"
            android:layout_marginRight="50dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="50dp" />

        <TextView
            android:id="@+id/search_button"
            android:layout_width="55dp"
            android:layout_height="28dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/log_out"
            android:layout_marginRight="90dp"
            android:layout_marginTop="20dp"
            android:background="@color/colorAccent"
            android:gravity="center_horizontal"
            android:text="查询"
            android:textColor="@android:color/background_light"
            android:textSize="20dp" />


    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/mainmiddle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/maintop">

        <ImageView
            android:id="@+id/textbox"
            android:layout_width="320dp"
            android:layout_height="200dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/textbox"
            android:layout_centerHorizontal="true"/>
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <TextView
               android:id="@+id/zhuyishixiang"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:gravity="center"
               android:text="注意事项"
               android:textSize="14dp"
               android:textColor="@android:color/holo_orange_light"
               android:layout_marginTop="20dp"
               android:layout_centerHorizontal="true" />
           <TextView
               android:id="@+id/statement"
               android:layout_width="200dp"
               android:layout_height="wrap_content"
               android:text="1.女生选宿舍时间：2018年9月20号下午2：00\n
2.男生选宿舍时间：2018年9月20号下午3：00\n
3.每个同学最多可以和三个人共同选宿舍\n
4.本系统只适用于大兴校区选择宿舍"
               android:textSize="12dp"
               android:textColor="@android:color/holo_orange_light"
               android:layout_below="@+id/zhuyishixiang"
               android:layout_centerHorizontal="true"
               android:layout_marginTop="5dp" />
       </RelativeLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/mainmiddle">
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
        android:id="@+id/xuehao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="10dp"
        android:maxLines="1"
        android:text="学号：1701210000"
        android:textColor="@android:color/black"
        android:textColorLink="@android:color/background_dark"
        android:textSize="15dp" />

        <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:maxLines="1"
        android:text="姓名：张三"
        android:textColor="@android:color/black"
        android:textColorLink="@android:color/black"
        android:textSize="15dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/xingbie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="10dp"
                android:maxLines="1"
                android:text="性别：男"
                android:textColor="@android:color/black"
                android:textColorLink="@android:color/background_dark"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/yanzhengma"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="85dp"
                android:layout_marginTop="10dp"
                android:maxLines="1"
                android:text="验证码：bbbbb"
                android:textColor="@android:color/black"
                android:textColorLink="@android:color/black"
                android:textSize="15dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/xiaoqu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="10dp"
                android:maxLines="1"
                android:text="校区：大兴"
                android:textColor="@android:color/black"
                android:textColorLink="@android:color/background_dark"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/nianji"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="10dp"
                android:maxLines="1"
                android:text="年级：2017级"
                android:textColor="@android:color/black"
                android:textColorLink="@android:color/black"
                android:textSize="15dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/yixuanlouhao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="10dp"
                android:maxLines="1"
                android:text="已选宿舍楼号：空"
                android:textColor="@android:color/black"
                android:textColorLink="@android:color/background_dark"
                android:textSize="15dp" />
            <TextView
                android:id="@+id/yixuansushehao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="28dp"
                android:layout_marginTop="10dp"
                android:maxLines="1"
                android:text="宿舍号：空"
                android:textColor="@android:color/black"
                android:textColorLink="@android:color/background_dark"
                android:textSize="15dp" />


        </LinearLayout>
        <ImageView
            android:id="@+id/next1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/next"
            android:scaleType="fitXY"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"/>
    </LinearLayout>
</RelativeLayout>
