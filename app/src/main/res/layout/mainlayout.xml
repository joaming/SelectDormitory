<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/mainbackgrond"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/mainbackgrond" />
    <RelativeLayout
        android:id="@+id/maintop"
        android:layout_width="match_parent"
        android:layout_height="155dp"
        android:backgroundTint="@android:color/holo_green_light">

        <ImageView
            android:id="@+id/pku_schoolbadge"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="65dp"
            android:layout_marginTop="65dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/pku_schoolbadge" />
        <ImageView
            android:id="@+id/log_out"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/log_out"
            android:layout_marginTop="13dp"
            android:layout_marginRight="50dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="50dp" />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/mainmiddle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/maintop">

        <ImageView
            android:id="@+id/textbox"
            android:layout_width="320dp"
            android:layout_height="200dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/textbox"
            android:layout_centerHorizontal="true"/>
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <TextView
               android:id="@+id/zhuyishixiang"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:gravity="center"
               android:text="注意事项"
               android:textSize="14dp"
               android:textColor="@android:color/holo_orange_light"
               android:layout_marginTop="20dp"
               android:layout_centerHorizontal="true" />
           <TextView
               android:id="@+id/statement"
               android:layout_width="200dp"
               android:layout_height="wrap_content"
               android:text="特别注意男女不能混住"
               android:textSize="12dp"
               android:textColor="@android:color/holo_orange_light"
               android:layout_below="@+id/zhuyishixiang"
               android:layout_centerHorizontal="true"
               android:layout_marginTop="5dp" />
       </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mainmiddle">
        <LinearLayout
            android:id="@+id/firstuser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/xuehao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="30dp"
                android:maxLines="1"
                android:text="学号：_______"
                android:textColor="@android:color/black"
                android:textColorLink="@android:color/background_dark"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:maxLines="1"
                android:text="姓名：_______"
                android:textColor="@android:color/black"
                android:textColorLink="@android:color/black"
                android:textSize="15dp" />
        </LinearLayout>
        <ImageView
            android:id="@+id/adduser"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@id/firstuser"
            android:layout_marginTop="20dp"
            android:src="@drawable/add"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:layout_centerHorizontal="true"/>


    </RelativeLayout>



</RelativeLayout>
